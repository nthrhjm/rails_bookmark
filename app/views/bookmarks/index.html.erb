<p id="notice"><%= notice %></p>
<header class="nav mb-5">
  <h2>Bookmarks</h2>
</header>
<div class="wrapper mb-5">
  <%= link_to 'New Bookmark', new_bookmark_path, class: 'btn btn-secondary' %>

  <table class="table table-hover mt-2">

    <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.title, bookmark.url, target: "_blank" %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: {confirm: "#{bookmark.title ||= bookmark.url} を削除します。よろしいですか？"} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Bookmark', new_bookmark_path, class: 'btn btn-secondary' %>
</div>